Inicio

    // Declarar variables
    Definir nota1, nota2, nota3 como Real
    Definir peso1, peso2, peso3 como Real
    Definir notaPonderada1, notaPonderada2, notaPonderada3, promedioFinal como Real

    // Solicitar entradas al usuario (opcional)
    Escribir "Ingrese la primera nota:"
    Leer nota1
    Escribir "Ingrese el peso de la primera nota (en %):"
    Leer peso1

    Escribir "Ingrese la segunda nota:"
    Leer nota2
    Escribir "Ingrese el peso de la segunda nota (en %):"
    Leer peso2

    Escribir "Ingrese la tercera nota:"
    Leer nota3
    Escribir "Ingrese el peso de la tercera nota (en %):"
    Leer peso3

    // Calcular notas ponderadas
    notaPonderada1 ← nota1 * (peso1 / 100)
    notaPonderada2 ← nota2 * (peso2 / 100)
    notaPonderada3 ← nota3 * (peso3 / 100)

    // Calcular promedio final
    promedioFinal ← notaPonderada1 + notaPonderada2 + notaPonderada3

    // Mostrar resultado
    Console.WriteLine("El promedio final es: " + promedioFinal)

Fin

